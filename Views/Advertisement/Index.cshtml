@model Lab4.Models.ViewModels.AdViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Show ads for community @Model.Community.Title</h1>
<p><a asp-action="Create" asp-route-title="@Model.Community.Title" asp-route-id="@Model.Community.Id">Upload New</a></p>
<p><a asp-controller="Community" asp-action="Index">Back to List</a></p>
@if (Model.Advertisements.Count() > 0)
{
<table class="table">
    <thead>
        <tr>
            <th>
                File Name
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
        <tbody>
            @foreach (var item in Model.Advertisements)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FileName)
                    </td>
                    <td>
                        <img src="@item.Url" style="max-width: 400px;" />
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
</table>
}
else
{
    <p>This community has no ads.</p>
}